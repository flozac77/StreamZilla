{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/main.py",      "use": "@vercel/python"      }
  ],
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/backend/main.py"
    },
    {
      "source": "/:path*",
      "destination": "frontend/dist/index.html"
    }
  ]
}