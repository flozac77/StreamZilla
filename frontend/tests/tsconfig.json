{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node", "@testing-library/jest-dom", "@types/testing-library__jest-dom"],
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "../src/**/*.ts",
    "../src/**/*.tsx",
    "../src/**/*.vue"
  ]
} 